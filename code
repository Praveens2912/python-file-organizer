import os
import shutil

# Folder path to organize
path = r"C:\Users\sprav\OneDrive\Download"

# File type mapping

file_types = {
    "Images":[".jpg",".png",".jpeg",".gif"],
    "Videos":[".mp4",".mkv",".avi"],
    "Documents":[".pdf",".docx",".txt"],
    "Excel":[".xls",".xlsx",".csv"],
    "Music":[".mp3",".wav"]
}


for folder in file_types:
    folder_path = os.path.join(path, folder) #creates full folder path
    if not os.path.exists(folder_path): #checks if folder already exists
        os.makedirs(folder_path)  #creates folder if missing


other_path = os.path.join(path, "Others")
if not os.path.exists(other_path):
    os.makedirs(other_path)


for file in os.listdir(path):
    file_path = os.path.join(path, file)

    if os.path.isfile(file_path):
        moved = False

        for folder,extensions in file_types.items():
            if file.lower().endswith(tuple(extensions)):
                shutil.move(file_path,os.path.join(path,folder,file))
                moved = True
                break

        if not moved:
            shutil.move(file_path,os.path.join(other_path,file))

print("âœ… Files organized successfully!")
